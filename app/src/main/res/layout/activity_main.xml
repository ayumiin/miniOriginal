<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebd5d5"
    android:backgroundTint="#ebd5d5"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="end"
        android:inputType="textPersonName"
        android:text="タイトル" />

    <TextView
        android:id="@+id/numberTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_white_frame"
        android:fontFamily="sans-serif-black"
        android:gravity="end"
        android:padding="6dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="60sp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/numberButton7"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/background_button_circle"
            android:backgroundTint="#ea8a8a"
            android:fontFamily="sans-serif-black"
            android:text="7"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <Button
            android:id="@+id/numberButton8"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/background_button_circle"
            android:backgroundTint="#ea8a8a"
            android:fontFamily="sans-serif-black"
            android:text="8"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <Button
            android:id="@+id/numberButton9"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/background_button_circle"
            android:backgroundTint="#ea8a8a"
            android:fontFamily="sans-serif-black"
            android:text="9"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <Button
            android:id="@+id/multiplyButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_button_circle"
            android:backgroundTint="#685454"
            android:fontFamily="sans-serif-black"
            android:text="×"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/numberButton4"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/background_button_circle"
            android:backgroundTint="#ea8a8a"
            android:fontFamily="sans-serif-black"
            android:text="4"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <Button
            android:id="@+id/numberButton5"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/background_button_circle"
            android:backgroundTint="#ea8a8a"
            android:fontFamily="sans-serif-black"
            android:text="5"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <Button
            android:id="@+id/numberButton6"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/background_button_circle"
            android:backgroundTint="#ea8a8a"
            android:fontFamily="sans-serif-black"
            android:text="6"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <Button
            android:id="@+id/minusButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_button_circle"
            android:backgroundTint="#685454"
            android:fontFamily="sans-serif-black"
            android:text="-"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/numberButton1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/background_button_circle"
            android:backgroundTint="#ea8a8a"
            android:fontFamily="sans-serif-black"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <Button
            android:id="@+id/numberButton2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/background_button_circle"
            android:backgroundTint="#ea8a8a"
            android:fontFamily="sans-serif-black"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <Button
            android:id="@+id/numberButton3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/background_button_circle"
            android:backgroundTint="#ea8a8a"
            android:fontFamily="sans-serif-black"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <Button
            android:id="@+id/plusButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_button_circle"
            android:backgroundTint="#685454"
            android:fontFamily="sans-serif-black"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/numberButton0"
            android:layout_width="144dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/background_zero_button_circle"
            android:backgroundTint="#ea8a8a"
            android:fontFamily="sans-serif-black"
            android:gravity="center|start"
            android:paddingStart="10dp"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <Button
            android:id="@+id/clearButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_button_circle"
            android:backgroundTint="#685454"
            android:fontFamily="sans-serif-black"
            android:text="C"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <Button
            android:id="@+id/equalButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_button_circle"
            android:backgroundTint="#685454"
            android:fontFamily="sans-serif-black"
            android:text="="
            android:textColor="#FFFFFF"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/backButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="170dp"
            android:background="@drawable/background_button_circle"
            android:backgroundTint="#685454"
            android:fontFamily="sans-serif-black"
            android:text="←"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/background_button_circle"
            android:backgroundTint="#685454"
            android:fontFamily="sans-serif-black"
            android:text="保存"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>